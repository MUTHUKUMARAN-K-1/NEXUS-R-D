# =============================================
# NEXUS-R&D Environment Configuration
# =============================================
# Copy this file to .env and fill in your API keys

# =============================================
# REQUIRED: AI Core
# =============================================

# Google Gemini API (Required)
# Get your key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Settings (Gemini 3)
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_THINKING_MODEL=gemini-3-pro-preview

# =============================================
# OPTIONAL: Enhanced Features
# =============================================

# ElevenLabs API (for Audio Brief TTS)
# Get your key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Serper API (for web search)
# Get your key at: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# NewsAPI (for market news)
# Get your key at: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# =============================================
# OPTIONAL: Database & Cache
# =============================================

# Supabase Database (optional - for persistence)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_KEY=your_supabase_anon_key

# Redis Cache (optional - for caching)
# REDIS_URL=redis://localhost:6379

# =============================================
# Application Settings
# =============================================

DEBUG=false
LOG_LEVEL=INFO

# Research Parameters
MAX_RECURSION_DEPTH=4
MIN_VERIFICATION_SOURCES=5
CONFIDENCE_THRESHOLD=0.85
